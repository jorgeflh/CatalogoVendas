@model CatalogoVendas.Core.Models.TbSegmentoEmpresa

@{
    ViewData["Title"] = "Edição de Segmento";
}

<div class="text-center">
    <h1>Editar Segmento</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSegmento" />
            <div class="form-group">
                <label asp-for="IdEmpresa" class="control-label"></label>
                <select asp-for="IdEmpresa" class="form-control" asp-items="ViewBag.IdEmpresa"></select>
                <span asp-validation-for="IdEmpresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DesSegmento" class="control-label"></label>
                <input asp-for="DesSegmento" class="form-control" />
                <span asp-validation-for="DesSegmento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <select class="form-control" asp-for="Ativo">
                    <option value="true">Ativo</option>
                    <option value="false">Inativo</option>
                </select>
                <span asp-validation-for="Ativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
