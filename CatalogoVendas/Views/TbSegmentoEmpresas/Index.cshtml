@model IEnumerable<CatalogoVendas.Core.Models.TbSegmentoEmpresa>

@{
    ViewData["Title"] = "Cadastro de Segmentos ";
}

<div class="text-center">
    <h1>Cadastro de Segmentos</h1>
</div>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Segmento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpresaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DesSegmento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEmpresaNavigation.RazaoSocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesSegmento)
                </td>
                <td>
                    @{
                        if (item.Ativo == true)
                        {
                            @Html.Raw("Ativo");
                        }
                        else
                        {
                            @Html.Raw("Inativo");
                        }
                    }
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdSegmento">Editar</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdSegmento">Detalhes</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdSegmento">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
