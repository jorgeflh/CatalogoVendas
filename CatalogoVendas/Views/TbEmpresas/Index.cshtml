@model IEnumerable<CatalogoVendas.Core.Models.TbEmpresa>
@using CatalogoVendas.Extensions

@{
    ViewData["Title"] = "Cadastro de Empresas";
}

<div class="text-center">
    <h1>Cadastro de Empresas</h1>
</div>

<p>
    <a class="btn btn-primary" asp-action="Create">Nova Empresa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioCadastroNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                </td>
                <td>
                    @HtmlHelperExtensions.DisplayCNPJ(item.Cnpj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @HtmlHelperExtensions.DisplayTelefone(item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUsuarioCadastroNavigation.Nome)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdEmpresa">Editar</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdEmpresa">Detalhes</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdEmpresa">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
